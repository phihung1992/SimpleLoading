<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ln_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_anim_loading"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_animation_image"
            android:layout_width="@dimen/anim_loading_dialog_image_size"
            android:layout_height="@dimen/anim_loading_dialog_image_size" />

        <TextView
            android:id="@+id/tv_loading_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Loading Content"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
